#!/bin/sh

if [ -n "`pidof statd`" ]; then 
    /bin/killall statd 2>/dev/null
fi

if [ -n "`pidof nfsd`" ]; then 
    /bin/killall nfsd 2>/dev/null
fi

if [ -n "`pidof mountd`" ]; then 
    /bin/killall mountd 2>/dev/null
fi

if [ ! -d /var/lib/nfs ] ;  then
    mkdir -p /var/lib/nfs
fi

/opt/sbin/statd
/opt/sbin/exportfs -a
/opt/sbin/nfsd
/opt/sbin/mountd
