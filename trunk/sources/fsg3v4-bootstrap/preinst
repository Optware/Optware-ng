#!/bin/sh

[ -e /opt ] || mkdir /opt
chmod 755 /opt
[ -e /home/.optware ] && mv /home/.optware /home/.optware-old
[ -e /home/.optware-fsg3v4 ] || mkdir -p /home/.optware-fsg3v4
chmod 755 /home/.optware-fsg3v4
if ! grep ' /opt ' /proc/mounts >/dev/null 2>&1 ; then
    mount -o bind /home/.optware-fsg3v4 /opt
fi
[ -d /opt/etc ] || mkdir -p /opt/etc
chmod 755 /opt/etc
[ -d /opt/var/lib ] || mkdir -p /opt/var/lib
chmod 755 /opt/var
[ -d /opt/tmp ] || mkdir -p /opt/tmp
chmod 1777 /opt/tmp
[ -d /opt/lib ] || mkdir -p /opt/lib
chmod 755 /opt/lib
