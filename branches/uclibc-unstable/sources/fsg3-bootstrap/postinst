#!/bin/sh

if [ `uname -m` = armv5b ]; then
  cat >> /opt/etc/ipkg/arch.conf << EOF
arch all 1
arch any 6
arch noarch 11
arch armeb 16
arch ixp4xxbe 21
arch fsg3be 26
EOF
fi

touch /etc/profile
if ! grep '^PATH=.*/opt/bin' /etc/profile >/dev/null 2>&1 ; then
  echo "PATH=\$PATH:/opt/bin:/opt/sbin" >> /etc/profile
fi

rm -f /etc/rc/S98optware
ln -s /etc/init.d/optware /etc/rc/S98optware
